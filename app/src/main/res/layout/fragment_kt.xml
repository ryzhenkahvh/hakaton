<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetectionActivity">

    <Button
        android:id="@+id/bt_1"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Button 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btDefinition_1"
        app:layout_constraintBottom_toTopOf="@+id/bt_2"
        app:layout_goneMarginTop="16dp"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/bt_2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Button 2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_1"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/bt_3"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Button 3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_2"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btDefinition_1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Definition 1"
        app:layout_constraintStart_toEndOf="@+id/bt_1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/btDefinition_2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Definition 2"
        app:layout_constraintStart_toStartOf="@+id/btDefinition_1"
        app:layout_constraintTop_toBottomOf="@+id/btDefinition_1"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btDefinition_3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Definition 3"
        app:layout_constraintStart_toStartOf="@+id/btDefinition_2"
        app:layout_constraintTop_toBottomOf="@+id/btDefinition_2"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
