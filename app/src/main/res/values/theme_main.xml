<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SpeedBanMain" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your dark theme here.      -->
        <!--  <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/cardRed</item>
        <item name="android:windowBackground">@color/windBackground2</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="buttonStyle">@style/ButtonStyle.Night</item>
    </style>

    <style name="ButtonStyle.Night" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:padding">7dp</item>
    </style>

    <style name="CardButtonStyle">
        <item name="android:background">@drawable/card_definition_background</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>